/* pages/shop/index.wxss */
@import "/template/index.wxss";
.shop-head-view{
  width: 100%;
  height:112rpx;
  display: flex;
  align-items: center;
}
.shop-location-btn{
  width:24rpx;
  height:33rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
}
.shop-location-address{
  font-size: 16px;
  width: 330rpx;
  color:#333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}
.shop-location-row{
  width:20rpx;
  height:12rpx;
  margin-left: 22rpx;
  margin-right: 92rpx;
}
.searchArea-container-view{
  width: 216rpx;
  margin-right: 20rpx;
}

.lunbo-view{
  width: 100%;
  height:240rpx;
  display: flex;
  flex-direction: row;
}
.lunbo-margin{
  width:20rpx;
  height: 240rpx;
  display: flex;
}

.swiper-container{
  width: 100%;
  height:240rpx;
}
swiper-item image {
  width: 96%;
  height:240rpx;
  margin-left: 2%;
}

.home-btn-lunbo-view{
  width: 100%;
  height:360rpx;
  display: flex;
  margin-top: 20rpx;
  flex-direction: row;
}
.home-btn-lunbo-margin{
  width:20rpx;
  height: 360rpx;
  display: flex;
}

.home-btn-swiper-container{
  width: 100%;
  height:360rpx;
}
.sepect-view{
  width: 100%;
  height:20rpx;
  background-color: #eeeeee;
}
.select-click-view{
  width:100%;
  height:80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #e8e8ea;
  background-color: #ffffff;
}
.select-item-view{
  flex:1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.select-text{
  font-size: 14px;
  color:#666666;
}
.select-text-choose{
  font-size: 14px;
  color:#000000;
}
.select-image{
  width:12rpx;
  height:8rpx;
  margin-left: 10rpx;
}
.select-more-view-modal{
  width:100%;
  height:100%;
  position: absolute;
  top:80rpx;
  background: rgba(0, 0, 0, 0.4);
}
.select-more-view{
  height: 96rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e8e8ea;
  justify-content: space-between;
}
.select-more-text{
  font-size: 15px;
  color:#666666;
  margin-left: 40rpx;
}
.select-more-choose-text{
  color:#ff5501;
}

.select-more-image{
  width: 30rpx;
  height:20rpx;
  margin-right: 40rpx;
}