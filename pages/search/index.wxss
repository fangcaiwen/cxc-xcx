/* pages/search/index.wxss */
@import "/template/index.wxss";
.search-page-view{
  width:100%;
  height:100%;
  box-sizing: border-box;
  padding: 30rpx;
  padding-top: 0px;
}
.search-top-text{
  font-size: 16px;
  color:#000000;
  margin-top: 40rpx;
  display: inline-block;
}
.search-hot-sign-view{
  flex-wrap: wrap;
  flex-direction: row;
  display: flex;
}
.search-hot-sign-text-view{
  width:150rpx;
  height:60rpx;
  border: 1rpx solid #cccccc;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  margin-top: 30rpx;
}
.search-hot-sign-text{
  font-size: 14px;
  color:#666666;
}
.search-view{
  width: 100%;
  height:104rpx;
  background-color: #ffda3b;
  display: flex;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
  align-items: center;
}

/* =====搜索结果以后的弹窗 */
.select-click-view{
  width:100%;
  height:80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #e8e8ea;
  background-color: #ffffff;
}
.select-item-view{
  flex:1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.select-text{
  font-size: 14px;
  color:#666666;
}
.select-text-choose{
  font-size: 14px;
  color:#000000;
}
.select-image{
  width:12rpx;
  height:8rpx;
  margin-left: 10rpx;
}
.select-more-view-modal{
  width:100%;
  height:100%;
  position: absolute;
  top:184rpx;
  background: rgba(0, 0, 0, 0.4);
}
.select-more-view{
  height: 96rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e8e8ea;
  justify-content: space-between;
}
.select-more-text{
  font-size: 15px;
  color:#666666;
  margin-left: 40rpx;
}
.select-more-choose-text{
  color:#ff5501;
}

.select-more-image{
  width: 30rpx;
  height:20rpx;
  margin-right: 40rpx;
}